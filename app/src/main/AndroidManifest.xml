<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.app.heartwise">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="in.wptrafficanalyzer.locationlatlngv2.permission.MAPS_RECEIVE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ListScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.DetailedList"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AddScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.RegisterScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.LoginScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.HomeScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SearchScreen"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>